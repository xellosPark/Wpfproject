        <ComboBox x:Name="cboxAttribute" HorizontalAlignment="Left" Margin="416,211,0,0" VerticalAlignment="Top" Width="147" RenderTransformOrigin="0.062,-0.062" Height="27"/>
        <xctk:ButtonSpinner x:Name="nLevelMin"  Margin="416,261,0,0" Spin="numCout_Spin1" Content="1" Width="50"
                              HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <xctk:ButtonSpinner x:Name="nLevelMax"  Margin="512,261,0,0" Spin="numCout_Spin2" Content="10" Width="50"
                              HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="~" HorizontalAlignment="Left" Margin="482,257,0,0" VerticalAlignment="Top"  Width="17"/>
        <Button x:Name="btnFilter" Content="Filter" HorizontalAlignment="Left" Margin="414,298,0,0" VerticalAlignment="Top" Width="149" Height="46"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="414,361,0,0" VerticalAlignment="Top" Width="149" Height="46"/>

    </Grid>
</Window>
