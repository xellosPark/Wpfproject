<Window x:Class="defProject.FileManager.FileCopyDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:defProject.FileManager"
        mc:Ignorable="d"
        Title="FileCopyDlg" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 첫 번째 열: 버튼 -->
        <Button Content="Copy버튼" Padding="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>

        <!-- 두 번째 열: 프로그래스 바 -->
        <ProgressBar x:Name="proBar" Grid.Row="1" Width="500" Height="20" Margin="10" Maximum="100" Value="50"/>

        <!-- 세 번째 열: 텍스트 박스 -->
        <TextBox x:Name="txet1" Grid.Row="2" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
